@model CasoPractico1_G2.Models.CursoModel

<h1>EditarCurso</h1>

<form asp-action="EditarCurso" method="post">
    <div class="form-group">
        <label for="Cod_Curso">Código</label>
        <input type="number" class="form-control" id="Cod_Curso" name="Cod_Curso" value="@Model.Cod_Curso" readonly />
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="form-group">
        <label for="Descripcion">Descripcion</label>
        <input type="text" class="form-control" id="Descripcion" name="Descripcion" value="@Model.Descripcion" required />
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
</form>